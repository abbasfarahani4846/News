@model IEnumerable<News.Models.Db.News>

@{
    ViewData["Title"] = "News Archive";
}

<div class="container mt-5">

    <div class="card shadow-sm mb-5">
        <div class="card-body">
            <h5 class="card-title">Filter News</h5>
            <form asp-action="Index" method="get" class="mt-3">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label for="searchTerm" class="form-label">Title</label>
                        <input type="text" id="searchTerm" name="searchTerm" class="form-control" placeholder="Search by title..." value="@ViewBag.CurrentSearchTerm">
                    </div>
                    <div class="col-md-3">
                        <label for="categoryId" class="form-label">Category</label>
                        <select id="categoryId" name="categoryId" class="form-select" asp-items="ViewBag.Categories">
                            <option value="">All Categories</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="tag" class="form-label">Tag</label>
                        <input type="text" id="tag" name="tag" class="form-control" placeholder="Search by tag..." value="@ViewBag.CurrentTag">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    No news found matching your criteria.
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-12 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(item.ImageName))
                        {
                            <img src="/images/news/thumb_@item.ImageName" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-muted">@item.ShortDescription</p>

                            <a href="/news/@item.Id" class="btn btn-outline-primary mt-auto">Read More</a>
                        </div>
                        <div class="card-footer text-muted">
                            <small>@item.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>