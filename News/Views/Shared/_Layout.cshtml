<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Newsers - Free HTML Magazine Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@100;600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/user/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/user/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="/user/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/user/css/style.css" rel="stylesheet">

    <style>
        /* --- 1. Set a fixed height for images --- */
        .latest-news-item .img-zoomin {
            height: 240px; /* Desired height. You can adjust this value. */
            width: 100%;
            object-fit: cover; /* Ensures the image fills the container without distortion */
        }

        /* --- 2. Limit the title to 3 lines --- */
        .latest-news-item .p-4 > a.h4 {
            /* Activate line-clamp mode */
            display: -webkit-box;
            -webkit-line-clamp: 3; /* Number of allowed lines: 3 */
            -webkit-box-orient: vertical;
            overflow: hidden; /* Hide the extra text */
            text-overflow: ellipsis; /* Show ellipsis (...) at the end */
            /* Set a uniform height for all cards */
            /* Important: This ensures that even 1-line titles occupy the space of 3 lines, keeping cards aligned */
            line-height: 1.5em; /* Line height (adjust based on your font) */
            min-height: 4.5em; /* Result: 3 lines * 1.5em = 4.5em */
            /* A little bottom margin for better spacing */
            margin-bottom: 1rem;
        }

        /* --- 3. (Optional) Ensure alignment of author/date at the card bottom --- */
        /* This ensures the entire card (.bg-light) takes up 100% of the item's height */
        .latest-news-item .bg-light {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        /* This makes the content area (.p-4) expand to fill any remaining vertical space,
           pushing the date/author section to the bottom. */
        .latest-news-item .d-flex.flex-column.p-4 {
            flex-grow: 1;
            justify-content: space-between;
        }
    </style>
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar start -->
    @await Component.InvokeAsync("Navbar")
    <!-- Navbar End -->
    <!-- Modal Search Start -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center">
                    <form asp-action="Index" asp-controller="News" method="get" class="w-100">
                        <div class="input-group w-75 mx-auto d-flex">
                            <input type="search" class="form-control p-3" placeholder="keywords" name="searchTerm" aria-describedby="search-icon-1">
                            <button type="submit" id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Search End -->
    @RenderBody()

    <!-- Footer Start -->
    @await Component.InvokeAsync("Footer")
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary border-2 border-white rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/user/lib/easing/easing.min.js"></script>
    <script src="/user/lib/waypoints/waypoints.min.js"></script>
    <script src="/user/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/user/js/main.js"></script>

    <script>
        $(document).ready(function () {
            // Target ALL forms with the class 'newsletter-subscription-form'
            $('.newsletter-subscription-form').on('submit', function (e) {
                // Prevent the default form submission
                e.preventDefault();

                // 'this' refers to the specific form that was just submitted
                var form = $(this);

                // Find the elements ONLY within the submitted form
                var emailInput = form.find('.newsletter-email-input');
                var submitButton = form.find('button[type="submit"]');

                // Find the message div that is the next sibling of the form
                var messageDiv = form.next('.newsletter-message');

                var emailValue = emailInput.val();

                // Disable button to prevent multiple clicks
                submitButton.prop('disabled', true).text('Subscribing...');
                messageDiv.html(''); // Clear previous messages

                // The AJAX call remains the same
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Subscribe", "Newsletter")",
                    data: { email: emailValue },
                    success: function (response) {
                        if (response.success) {
                            form.html(`<div class="alert alert-success">${response.message}</div>`);
                            emailInput.val('');
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                         alert("An unexpected error occurred. Please try again.");
                    },
                    complete: function () {
                        // Re-enable the button
                        submitButton.prop('disabled', false).text('Subscribe Now');
                    }
                });
            });
        });
    </script>
</body>

</html>