@model IEnumerable<News.Models.Db.Menu>

@{
    var parent = ViewBag.parent as News.Models.Db.Menu;
    ViewData["Title"] = "Index " + (parent != null ? parent.Title : "");
}

<p>
    @if (parent != null)
    {
        <a href="/admin/menus/create?parentId=@parent.Id" class="btn btn-outline-success">
            Add new sub menu
        </a>
    }
    else
    {
        <a href="/admin/menus/create" class="btn btn-outline-success">
            Add new menu
        </a>
    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Link</td>
                <td>@item.Position</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@item.Id">
                        Edit |
                    </a>

                    @if (parent == null)
                    {
                        <a href="/admin/menus?id=@item.Id">
                            Sub menus |
                        </a>
                    }

                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
